<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/t_s">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_home"
            android:textSize="@dimen/re"
            android:textColor="@color/p"
            android:gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/as"
            android:src="@drawable/download4"
            android:id="@+id/imge"
            android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_home"
        android:textSize="@dimen/dimen"
        />
    </LinearLayout>
</ScrollView>