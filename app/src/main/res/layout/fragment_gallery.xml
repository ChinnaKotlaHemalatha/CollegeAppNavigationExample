        android:layout_height="@dimen/as"
        android:src="@drawable/principal"
        android:id="@+id/img"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_gallery"
        android:textSize="@dimen/dimen"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/as"
        android:src="@drawable/download1"
        android:id="@+id/img1"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/as"
        android:src="@drawable/download2"
        android:id="@+id/img2"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/as"
        android:src="@drawable/download3"
        android:id="@+id/img3"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/as"
        android:src="@drawable/download4"
        android:id="@+id/img4"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/as"
        android:src="@drawable/download5"
        android:id="@+id/img5"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/as"
        android:src="@drawable/download6"
        android:id="@+id/img6"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/as"
        android:src="@drawable/download7"
        android:id="@+id/img7"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/as"
        android:src="@drawable/download8"
        android:id="@+id/img8"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/as"
        android:src="@drawable/download9"
        android:id="@+id/img9"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/as"
        android:src="@drawable/download10"
        android:id="@+id/img10"/>







</LinearLayout>
</ScrollView>